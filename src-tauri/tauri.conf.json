{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Baseball Broadcast Board",
  "version": "2.0.0",
  "identifier": "com.baseball.broadcast.board",
  "build": {
    "beforeDevCommand": "NODE_ENV=development node server.js",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:8080",
    "frontendDist": "../public"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../public/**/*", "../config/**/*"],
    "externalBin": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Real-time baseball scoreboard",
    "longDescription": "Real-time baseball scoreboard for live streaming and broadcasting",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "label": "operation",
        "title": "Baseball Broadcast Board - Operation Panel",
        "url": "http://localhost:8080/operation.html",
        "width": 1200,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
